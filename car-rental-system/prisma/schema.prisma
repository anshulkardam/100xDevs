generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  password  String
  createdAt DateTime @default(now())
  bookings  Booking[]
}

model Booking {
  id           String @id @default(cuid())
  car_name     String
  days         Int
  rent_per_day Float
  status       Status

  user User @relation(references: [id], fields: [user_id])

  user_id String

   createdAt DateTime @default(now())
}

enum Status {
  BOOKED
  COMPLETED
  CANCELLED
}
